#coding=utf-8
import sys
from Tkinter import *
     
myApp = Tk()
#create a string variable
ment = StringVar()
#set the size of window
myApp.geometry('1280x768')
myApp.title('Myapp')

#create the menubar
menubar = Menu(myApp)
#create the file component of that menubar
filemenu = Menu(menubar, tearoff=5)
#Add the sub headings to the file menu
filemenu.add_command(label="New")
filemenu.add_command(label="Open")
filemenu.add_command(label="Save As...")
filemenu.add_command(label="Close")

menubar.add_cascade(label="File",menu=filemenu)


helpmenu = Menu(menubar, tearoff=0)
helpmenu.add_command(label="Help docs")
helpmenu.add_command(label="About")
menubar.add_cascade(label="Help",menu=helpmenu)
#add menubar to the window
myApp.config(menu=menubar)

myApp.mainloop()