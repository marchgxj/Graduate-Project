# coding=utf-8
import threading
import serial
import time
import binascii
class myThread (threading.Thread):   
    def __init__(self, threadID, name, port, baud,rootframe,filename):
        threading.Thread.__init__(self)
        self.threadID = threadID
        self.root = rootframe
        self.app = self.root.appFrame
        self.currenttab = 0
        self.thread_stop = True
        self.magneticdata = 0
        self.carstatus = 0
        self.uart= serial.Serial(port = port,baudrate = baud)
        self.filename = filename
   

    def run(self):
        count = 0
        self.app.identifyuartopen = 1
        while(1):
            while(self.thread_stop == False):
                if self.currenttab == 3:
                    buf = self.uart.read(1)
                    if len(buf)!= 0:
                        if ord(buf)==0x7D:
                            buf=self.uart.read(15)
                            for v in buf:
                                self.file = open(self.filename,"a+")
                                print binascii.b2a_hex(v)
                                self.write(binascii.b2a_hex(v)+" ")
                                self.file.close()
                                
#                             self.magneticdata=ord(buf[0])<<8|ord(buf[1])
#                             self.carstatus = ord(buf[2])
                              
                    time.sleep(0.5)
                    count+=1
                    print count