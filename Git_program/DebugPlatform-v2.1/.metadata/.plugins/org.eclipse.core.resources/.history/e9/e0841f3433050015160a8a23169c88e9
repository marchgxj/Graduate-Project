# coding=utf-8
import threading
import serial
import time
import binascii
class myThread (threading.Thread):   
    def __init__(self, threadID, name, port, baud,rootframe,filename):
        threading.Thread.__init__(self)
        self.threadID = threadID
        self.root = rootframe
        self.app = self.root.appFrame
        self.currenttab = 0
        self.thread_stop = True
        self.magneticdata = 0
        self.carstatus = 0
        self.uart= serial.Serial(port = port,baudrate = baud)
        self.filename = filename
        self.sensordata=[]
   
    '''
当前数据格式
帧头 0x7D 5个16位传感器数值 高位在前  1个8位停车状态  1个16位斜率 高位在前 有符号型  帧尾0x7E    
    '''
    def run(self):
        count = 0
        self.app.identifyuartopen = 1
        while(1):
            while(self.thread_stop == False):
                if self.currenttab == 3:
                    buf = self.uart.read(1)
                    if len(buf)!= 0:
                        if ord(buf)==0x7D:
                            buf+=self.uart.read(15)
                            for v in buf:
                                self.file = open(self.filename,"a+")
                                self.file.write(binascii.b2a_hex(v)+" ")
                                self.file.close()
                            self.sensordata=[]
                            self.sensordata.append(ord(buf[0])<<8|ord(buf[1]))
                            self.sensordata.append(ord(buf[2])<<8|ord(buf[3]))
                            self.sensordata.append(ord(buf[4])<<8|ord(buf[5]))
                            self.sensordata.append(ord(buf[6])<<8|ord(buf[7]))
                            self.sensordata.append(ord(buf[8])<<8|ord(buf[9]))
                            print self.sensordata
                              
                    time.sleep(0.5)
                    count+=1
                    print count